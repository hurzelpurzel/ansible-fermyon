[Unit]
Description=fermyon
Requires=network.target
After=syslog.target network.target
[Service]
Type=forking
ExecStart={{fermyon_installation}/local/start.sh
User=fermyon
EnvironmentFile=/etc/sysconfig/fermyon
PIDFile={{fermyon_installation}}/fermyon.pid
Environment="FERMYON_PID_FILE_PATH={{fermyon_installation}}/fermyon.pid"
[Install]
WantedBy=multi-user.target
